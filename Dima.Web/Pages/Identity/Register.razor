@page "/comecar"
@layout HeadlessLayout
<PageTitle>Dima - Entrar</PageTitle>

<MudGrid Justify="Justify.Center">
    <MudItem xs="12" sm="12" md="8" lg="6" xl="6" xxl="6">
        @* xs - extra small, xxl extra large *@
        <MudPaper Elevation="5" Class="mud-width-full pa-8">
            @* Padding all , posso colocar padding L,R,T  *@
            <div class="d-flex justify-center pb-8 pt-8">
                <img src="images/dima.png" alt="Dima - Controle financeiro" width="210" />
            </div>
            <MudForm @ref="_mudForm">
                <MudTextField T="string" Label="Email" InputType="InputType.Email" Required="true"
                              RequiredError="Informe o E-mail" Validation="@(new EmailAddressAttribute{ErrorMessage = "E-mail inválido"})" />

                <MudTextField T="string" Label="Senha" InputType="InputType.Password" Placeholder="Senha" Required="true" RequiredError="Senha inválida" />
            </MudForm>
            <div class="d-flex mt-8">
                <MudButton Variant="Variant.Filled" Color="Color.Primary">Cadastrar</MudButton>
                <MudSpacer />
                <MudButton Variant="Variant.Outlined" Href="/login">Ja tenho uma conta</MudButton>
            </div>
        </MudPaper>
    </MudItem>
</MudGrid>

@code
{
    MudForm? _mudForm;
}


